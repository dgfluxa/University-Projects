<h1>Lista de campus</h1>
<% if can? :create, Camp %>
  <%= link_to 'Nuevo Campus', new_camp_path %>
<% end %>
<table class="table table-striped">
  <tr>
    <thead>
    <th>Nombre</th>
    <th>Direccion</th>
    <th colspan="3"></th>
    </thead>
  </tr>

  <% @camps.each do |camp| %>
    <tr>
      <td><%= camp.nombre %></td>
      <td><%= camp.ubicacion %></td>
      <td><%= link_to 'Ver Más', camp_path(camp) %></td>
      <% if can? :manage, camp %>
        <td><%= link_to 'Editar', edit_camp_path(camp) %></td>
        <td><%= link_to 'Eliminar', camp_path(camp),
                method: :delete,
                data: { confirm: '¿Estás seguro de eliminar este Campus?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
