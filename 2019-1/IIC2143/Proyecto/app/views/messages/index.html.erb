<% if @usuario2 != current_user %>
<h4 class="p-3 mb-2 bg-success text-white" >Conversacion con: <%= @usuario2.first_name%> <%= @usuario2.last_name%></h4>
<% else %>
<h4 class="p-3 mb-2 bg-success text-white" >Conversacion con:<%= @usuario1.first_name%> <%= @usuario1.last_name%></h4>
<% end %>
<% @conversation.messages.each do |messages| %>
  <%user = User.find_by(id: messages.user1_id)%>
  <div class="container">
  <div class="card-body">
    <div class="row">
    <% if user != current_user %>
        <div class="col-md-2">
          <p class="text-secondary text-center"> <%= link_to user.email, profile_path(user) %></p>
          <p> <%= image_tag user.avatar.url(:medium), class: "rounded-circle img-fluid" %> </p>
          <p class="text-secondary text-center"><%= messages.created_at.strftime("%F %T") %></p>
        </div>

      <div class="col-md-10">
        <p>
            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
       </p>

       <div class="clearfix"></div>
        <div class="card border-info mb-3" style="max-width: 10rem;">
            <div class="card-body text-info">
              <p class="card-text">
                  <%= messages.texto %>
              </p>
            </div>
        </div>
      </div>
      <% else %>
        <div class="col-md-3">
          <p class="text-secondary text-center"> </p>
          <p> </p>
          <p class="text-secondary text-center"> </p>
        </div>
          <div class="col-md-2">
            <p>
                <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                <span class="float-right"><i class="text-warning fa fa-star"></i></span>
           </p>
           <div class="clearfix"></div>
              <div class="card border-success mb-3" style="max-width: 10rem;">
                  <div class="card-body card-right text-info">
                    <p class="card-text text-dark">
                        <%= messages.texto %>
                    </p>
                  </div>
              </div>
            </div>
          <div class="col-md-2">
            <p class="text-secondary text-center"> <%= link_to user.email, profile_path(user) %></p>
            <p> <%= image_tag   user.avatar.url(:medium), class: "rounded-circle img-fluid" %> </p>
            <p class="text-secondary text-center"><%= messages.created_at.strftime("%F %T") %>
          </div>


  <% end %>
<% end %>
  </div>
</div>
<%= render 'newmessage' %>
</div>
